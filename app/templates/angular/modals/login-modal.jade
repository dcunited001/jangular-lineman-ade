form(ng-submit="ok()")
  .modal-header
    h3 Log In

  .modal-body
    .row-fluid
      alert(ng-repeat="alert in loginAlerts", type="alert.type", close="closeAlert($index)")
        {{alert.msg}}
    .row-fluid
      .span5: input(type="text", name="username", placeholder="Email", ng-model="creds.email", required)
      .span5: input(type="password", name="password", placeholder="Password", ng-model="creds.password", required)
      .span2: input(type="checkbox", name="remember_me", ng-model="creds.remember_me") 

  .modal-footer
    .pull-right: button.btn.btn-primary(type='submit') Log In
    .pull-left:  button.btn(ng-click='cancel()') Cancel